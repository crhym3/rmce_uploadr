<h1>Listing posts</h1>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, post %></h2>
    <span>created on <%= post.created_at %></span>
    <p><%= link_to 'Edit', edit_post_path(post) %> |
       <%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></p>
  </tr>
<% end %>

